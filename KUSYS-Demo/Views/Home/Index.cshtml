@model IEnumerable<KUSYS_Demo.Models.Course>
<link rel="stylesheet" href="~/css/homePage.css">
<div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
        <div class="col-md-6 px-0">
          <h1 class="display-4 font-italic"> Eğitimler</h1>
          <p class="lead my-3">Burada listelenen tüm kurslara ücretsiz erişebilir profilinize ekleyebilirsiniz.</p>
          <p class="lead mb-0"><a  asp-controller="Courses" asp-action="Index" class="text-white font-weight-bold">Kurs ekle...</a></p>
        </div>
      </div>
<div class="products">
    @foreach (var item in Model)
    {
        <div class="product">
            <img src="https://i.imgur.com/WwkgPd5.jpg">
            <h1>@item.CourseName </h1> <div class="smallDate"><small> @item.DateCourse</small></div>
            <p class="description">@item.Description</p>
              <form asp-action="SelectCourse" asp-route-id="@item.CourseId" onsubmit="return jQueryAjaxSelectCoursePost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@item.CourseId" />
            <br />
            <div class="form-group">
                <button style="width: 100%;" type="submit" class="price btn-primary btn"> Seç</button>
            </div>
        </form>
        </div>

    } 
</div>
@if (Model.Count()==0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
  <strong>UYARI!</strong> @Html.Raw(TempData["coursList"])
</div>

}

